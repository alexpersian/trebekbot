<div class="bg-white">
  <div class="max-w-7xl mx-auto pb-12 px-4 sm:pb-16 sm:px-6 lg:px-8 lg:pb-20">
    <dl class="mt-10 text-center sm:max-w-3xl sm:mx-auto sm:grid sm:grid-cols-3 sm:gap-8">
      <div class="flex flex-col">
        <dt class="order-2 mt-2 text-lg leading-6 font-normal text-gray-500"><%= "Game".pluralize(@games_count) %></dt>
        <dd class="order-1 text-5xl font-extrabold text-indigo-600"><%= number_with_delimiter(@games_count) %></dd>
      </div>
      <div class="flex flex-col mt-10 sm:mt-0">
        <dt class="order-2 mt-2 text-lg leading-6 font-normal text-gray-500"><%= "Player".pluralize(@players_count) %></dt>
        <dd class="order-1 text-5xl font-extrabold text-indigo-600"><%= number_with_delimiter(@players_count) %></dd>
      </div>
      <div class="flex flex-col mt-10 sm:mt-0">
        <dt class="order-2 mt-2 text-lg leading-6 font-normal text-gray-500"><%= "Team".pluralize(@teams_count) %></dt>
        <dd class="order-1 text-5xl font-extrabold text-indigo-600"><%= number_with_delimiter(@teams_count) %></dd>
      </div>
    </dl>
  </div>
</div>
